@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

@if (!(User.Identity.IsAuthenticated))
{
    <div class="row">
        <div class="col-md-5">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Create a new account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Username"></label>
                    <input asp-for="Input.Username" class="form-control-plaintext border-bottom" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control-plaintext border-bottom" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control-plaintext border-bottom" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control-plaintext border-bottom" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Role">Are you a:</label><br />
                    <select asp-for="Input.Role" class="custom-select custom-select-sm">
                        @foreach (var item in RegisterModel.Roles)
                        {
                            <option input="@item.Name">@item.Name</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary btn-block" style="margin-bottom: 0.5rem;">Register</button>
            </form>
            <p>Already have an account? <a asp-page="Login">Log in</a></p>
        </div>
    </div>
}
else
{
    <p>You are already logged in.</p>
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
